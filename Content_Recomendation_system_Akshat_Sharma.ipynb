import pandas as pd, os

def safe_load_csv(path, nrows=None):
    try:
        df = pd.read_csv(path, nrows=nrows, low_memory=False)
        print(f"✅ Loaded {path}: {df.shape}")
        return df
    except Exception as e:
        print(f"❌ Could not load {path}: {e}")
        return None

